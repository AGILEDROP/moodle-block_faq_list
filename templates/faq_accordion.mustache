{{!
    @template block_faq_list/faq_accordion

    This template renders faq list as an accordion.

    Example context (json):
    {
        "show_title": true,
        "faq_title": "FAQ Block Title",
        "faq_items": [
            "itemnumber": 0,
            "id": 5,
            "question": "Question?",
            "answer": "<p>Answer.</p>",
        ],
    }
}}
<div class="faq-wrapper">
    {{#show_title}}
        <h2>{{faq_title}}</h2>
    {{/show_title}}

    <div class="accordion" id="faq-accordion">
        {{#faq_items}}
            <div class="accordion-item bg-light border-radius mb-3">
                <h3 class="accordion-header mb-0 fs" id="faq-heading-{{{id}}}">
                    <button class="accordion-button w-100 d-flex align-items-center p-3 pr-6 text-left font-weight-bold {{#itemnumber}}collapsed{{/itemnumber}}" type="button" data-toggle="collapse" data-target="#faq-content-{{{id}}}" aria-expanded="{{^itemnumber}}true{{/itemnumber}}{{#itemnumber}}false{{/itemnumber}}" aria-controls="faq-content-{{{id}}}">
                        {{{question}}}
                        {{#pix}} t/expandedchevron, core {{/pix}}
                    </button>
                </h3>

                <div id="faq-content-{{{id}}}" class="accordion-collapse border-top collapse {{^itemnumber}}show{{/itemnumber}}" aria-labelledby="faq-heading-{{{id}}}" data-parent="#faq-accordion">
                    <div class="accordion-body p-3">
                        {{{answer}}}
                    </div>
                </div>
            </div>
        {{/faq_items}}
    </div>
</div>